@using lesson4MVC.Models.EntityFrameWork
@model List<Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<a class="btn btn-primary" href="/Home/Yeni">Yeni Istifadeci</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Duzelis et</th>
            <th>Sil</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var ordr in Model)
        {
            <tr>
                <td>@ordr.OrderID</td>
                <td>@ordr.ShipName</td>
                <td><a class=" btn btn-primary btn-danger" href="/Home/Yeni/@ordr.OrderID">Duzelis et</a></td>
                <td><a class=" btn btn-primary btn-warning" href="#">Sil</a></td>

            </tr>
        }

    </tbody>
</table>